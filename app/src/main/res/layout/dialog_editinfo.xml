<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_shape"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/editInfoDialogFrag_titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="정보 입력"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/editInfoDialogFrag_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#eeeeee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editInfoDialogFrag_titleText" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editInfoDialogFrag_idLayout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editInfoDialogFrag_view">

            <EditText
                android:id="@+id/editInfoDialogFrag_idEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="나이키 아이디 입력"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editInfoDialogFrag_passLayout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editInfoDialogFrag_idLayout">

            <com.maksim88.passwordedittext.PasswordEditText
                android:id="@+id/editInfoDialogFrag_passEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="나이키 비밀번호 입력"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/editInfoDialogFrag_spinner"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editInfoDialogFrag_passLayout" />

        <TextView
            android:id="@+id/editInfoDialogFrag_explainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="* 절대 개인정보 수집을 위한 활동에\n  사용하지 않습니다."
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editInfoDialogFrag_cancelButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editInfoDialogFrag_spinner" />

        <Button
            android:id="@+id/editInfoDialogFrag_cancelButton"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/dialog_cancel_button_shape"
            android:text="취소"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editInfoDialogFrag_checkButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/editInfoDialogFrag_checkButton"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/dialog_check_button_shape"
            android:text="확인"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/editInfoDialogFrag_cancelButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>